# Texas Hold'em Purple Agent (Blue/Red)
#
# This Dockerfile builds a purple agent for Texas Hold'em evaluation.

FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml README.md ./
COPY green_agent_benchmark/ ./green_agent_benchmark/
COPY requirements.txt ./

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir -e .
RUN pip install --no-cache-dir a2a-sdk uvicorn httpx

ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

EXPOSE 9019

# Arguments: --host, --port, --card-url, --name, --role
ENTRYPOINT ["python", "-m", "green_agent_benchmark.a2a.purple_agent_template"]
CMD ["--host", "0.0.0.0", "--port", "9019", "--name", "TexasAgent", "--role", "player"]
